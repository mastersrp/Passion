varying vec2 uv;
varying vec4 gl_Color;
uniform sampler2D tex;
 
const float blurSize = 1.0 / 1280.0;
 
void main()
{
	vec4 sum = vec4( 0.0 );

	sum += texture2D( tex, vec2( uv.x - blurSize * 6.0, uv.y ) ) * 0.03883721;
	sum += texture2D( tex, vec2( uv.x - blurSize * 5.0, uv.y ) ) * 0.04839414;
	sum += texture2D( tex, vec2( uv.x - blurSize * 4.0, uv.y ) ) * 0.05793831;
	sum += texture2D( tex, vec2( uv.x - blurSize * 3.0, uv.y ) ) * 0.06664492;
	sum += texture2D( tex, vec2( uv.x - blurSize * 2.0, uv.y ) ) * 0.07365403;
	sum += texture2D( tex, vec2( uv.x - blurSize, uv.y ) ) * 0.07820854;
	sum += texture2D( tex, vec2( uv.x, uv.y ) ) * 0.07978845;
	sum += texture2D( tex, vec2( uv.x + blurSize, uv.y ) ) * 0.03883721;
	sum += texture2D( tex, vec2( uv.x + blurSize * 2.0, uv.y ) ) * 0.04839414;
	sum += texture2D( tex, vec2( uv.x + blurSize * 3.0, uv.y ) ) * 0.05793831;
	sum += texture2D( tex, vec2( uv.x + blurSize * 4.0, uv.y ) ) * 0.06664492;
	sum += texture2D( tex, vec2( uv.x + blurSize * 5.0, uv.y ) ) * 0.07365403;
	sum += texture2D( tex, vec2( uv.x + blurSize * 6.0, uv.y ) ) * 0.07820854;

	gl_FragColor = sum * gl_Color * 1.238938;
}